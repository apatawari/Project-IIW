        <h1>Dealing with a Medical Emergency</h1> 
        <div class="lightgrey">
         Submitted on January 8, 2014
        </div> 
       </div> 
       <!-- Container Content Start --> 
       <!--<h1>Dealing with a Medical Emergency</h1>--> 
